<h3 class = "m-4">管理者 ユーザー一覧</h3>

<% if @users.any? %>
  <table class="table table-bordered">
    <tr>
      <th>id</th>
      <th>name</th>
      <th>created_at</th>
    </tr>
    <% @users.each do |users| %>
      <tr>
        <td><%= users.id %></td>
        <td><%= link_to "#{users.name}", admin_user_path(users) %></td>
        <td><%= l users.created_at, format: :long %></td>
      </tr>
    <% end %>
  </table>
  <div class="py-3 pagination_wrapper">
    <%= paginate @users, theme: 'bootstrap-5' %>
  </div>
<% else %>
  <h3 class="text-center">No Data</h3>
<% end %>




