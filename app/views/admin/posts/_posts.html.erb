<% if posts.any? %>
  <table class="table table-bordered">
    <tr>
      <th>id</th>
      <th width="50%">post</th>
      <th>created_at</th>
      <th>post_user</th>
      <th></th>
    </tr>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= l post.created_at, format: :long %></td>
        <td><%= link_to post.user.name, admin_user_path(post.user) %></td>
        <td><%= link_to "destroy", admin_post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
  </table>
  <div class="py-3 pagination_wrapper">
    <%= paginate posts, theme: 'bootstrap-5' %>
  </div>
<% else %>
  <h3 class="text-center">No Data</h3>
<% end %>
