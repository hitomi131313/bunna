<div class="container" style="background-color: #e2d4cb;">
  <div class='row'>
    <div class='col-3 p-3' style="background-color: #eee6e2;" >
      <div class="card shadow-sm rounded-3" style="background-color: #d0b9af; color:#715412;">
        <div class="card-body">
          <h5 class="card-title mb-3 fw-bold">検索条件</h5>
          <%= render 'posts/search', url: user_path %>
        </div>
      </div>
    </div>

    <div class='col-9'>
      <div class='d-flex justify-content-between align-items-center px-3 py-2 my-3 text-white fw-bold' style="background-color: #b28c7b;">
        <div>
          <h3><%= @user.name %></h3>
        </div>
      </div>

      <div class='my-4'>
        <%= render 'posts/index', posts: @posts %>
      </div>
    </div>
  </div>
</div>