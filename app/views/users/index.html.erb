<div class="container" style="background-color: #e2d4cb;">
  <div class='row'>
    <div class='col-lg-3 p-3' style="background-color: #eee6e2;" >
      <div class="card shadow-sm rounded-3" style="background-color: #d0b9af; color:#715412;">
        <div class="card-body">
          <h5 class="card-title mb-3 fw-bold">検索条件</h5>
          <%= render 'posts/search', url: users_path %>
        </div>
      </div>

      <div class="card shadow-sm rounded-3 mt-3" style="background-color: #d0b9af; color:#715412;">
        <div class="card-body">
          <h5 class="card-title mb-3 fw-bold">キーワード検索</h5>
          <%= render 'search', url: users_path %>
        </div>
      </div>
    </div>

    <div class='col-lg-9'>
      <div class='row text-center px-3 py-2 my-3 text-white fw-bold' style="background-color: #b28c7b;">
        <div class="col-md-12">
          <h3>ユーザ一覧</h3>
        </div>
      </div>

      <div class="row">
      <% if @users.present? %>
        <% @users.each do |user| %>
          <div class="col-lg-4 col-md-6">
            <div class="card mx-auto my-3 shadow-lg vh-50">
              <%= link_to user_path(user.id) do %>
                <%= image_tag user.get_profile_image(300,300), class: "card-img-top" %>
              <% end %>
              <div class="card-body text-center">
                <h5 class="card-title">
                  <%= link_to user_path(user.id), class: "text-decoration-none text-dark fw-bold" do %>
                    <%= user.name %>
                  <% end %>
                </h5>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p>該当のユーザは見つかりませんでした</p>
      <% end %>
    </div>
  </div>
</div>
