<div class="container" style="background-color: #e2d4cb;">
  <div class='row'>
    <div class='col-3 mx-0' style="background-color: #eee6e2;" >
      <%= render 'posts/search', url: mypage_path  %>
    </div>

    <div class='col-9'>
      <div class='d-flex justify-content-between align-items-center px-3 py-2 my-3 text-white fw-bold' style="background-color: #b28c7b;">
        <h3><%= @user.name %></h3><br>
        <%= link_to "プロフィール編集", edit_user_path(@user.id), class: "text-white" %>
      </div>

      <div class='my-4'>
        <%= render 'posts/index', posts: @my_posts %>
      </div>
    </div>
  </div>
</div>