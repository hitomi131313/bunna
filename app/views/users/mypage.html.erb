<div>
  <h3><%= @user.name %></h3>
  <%= link_to "プロフィール編集", edit_user_path(@user.id) %>
</div>


<% @my_post.each do |my_post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
  <%= link_to post_path(my_post.id) do %>
    <%= image_tag my_post.get_image, class: "card-img-top"; %>
  <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag my_post.user.get_profile_image(100,100), class: "mt-3 rounded-cercle"; %>
        </div>
        <div class="col-10">
          <p class="card-title"> ユーザーネーム : <%= link_to user_path(@user.id) do %>
                                                 <%= my_post.user.name %>
                                                 <% end %>
                                                 </p>
          <p class="card-title"> タイトル       : <%= my_post.title %> </p>
          <p class="card-text">  本文           : <%= my_post.body %>  </p>
          <%#= my_post.genre %>
          <%#= my_post.kind %>
          <%#= my_post.origin_country %>
          <%#= my_post.place %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="card-list-container py-5">