<%= form_with url: url, method: :get, local: true do |f| %>
  <div class="form-group">
    <%= f.label :keyword, "ユーザ検索" %> <br>
    <%= f.text_field :keyword, placeholder: "nameを検索"%>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
    <%= f.submit "検索" %>
  </div>
<% end %>