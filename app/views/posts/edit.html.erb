<div class="container d-flex justify-content-center" style="background-color: #e2d4ce;">
  <div class="card w-75 shadow-sm my-4 mt-5">
    <%= image_tag @post.get_image, class:"card-img-top" %>

    <div class="card-body">
     <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <%= @post.errors.count %>件のエラーが発生しました
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @post do |f| %>
        <%= f.hidden_field :image %>

        <div class="mb-3">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :body, "本文" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="mb-3 row">
          <%= f.label :genre, "ジャンル", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.select :genre, Post.genres.keys.map { |k| [t("enums.post.genre.#{k}"), k] }, { include_blank: "選択してください" }, { class: "form-select" } %>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :kind, "種類", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.select :kind, Post.kinds.keys.map { |k| [t("enums.post.kind.#{k}"), k] }, { include_blank: "選択してください" }, { class: "form-select" } %>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :origin_country, "産地国", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.select :origin_country, Post.origin_countries.keys.map { |k| [t("enums.post.origin_country.#{k}"), k] }, { include_blank: "選択してください" }, { class: "form-select" } %>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :place, "場所", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.select :place, Post.places.keys.map { |k| [t("enums.post.place.#{k}"), k] }, { include_blank: "選択してください" }, { class: "form-select" } %>
          </div>
        </div>

        <div class="text-center">
          <%= f.submit '更新する', class: "btn btn-secondary w-100 my-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
