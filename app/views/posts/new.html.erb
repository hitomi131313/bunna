<h1>New Posts</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
  <p> 画像 </p>
  <%= f.file_field :image, accept: "image/*" %>

  <p> タイトル </p>
  <%= f.text_field :title %>

  <p> 本文 </p>
  <%= f.text_area :body %>

  <p> ジャンル </p>
  <%= f.select :genre, Post.genres.keys.map { |k| [t("enums.post.genre.#{k}"), k] }, include_blank: "選択してください" %>

  <p> 種類 </p>
  <%= f.select :kind, Post.kinds.keys.map { |k| [t("enums.post.kind.#{k}"), k] }, include_blank: "選択してください" %>

  <p> 産地国 </p>
  <%= f.select :origin_country, Post.origin_countries.keys.map { |k| [t("enums.post.origin_country.#{k}"), k] }, include_blank: "選択してください" %>

  <p> 場所 </p>
  <%= f.select :place, Post.places.keys.map { |k| [t("enums.post.place.#{k}"), k] }, include_blank: "選択してください" %>

  <%= f.submit '投稿' %>

<% end %>
