<%= form_with url: url, method: :get, local: true do |f| %>
  <div class="keyword_search_form">
    <%= f.text_field :word, class: "mb-3" %>
    <%= f.select :range, options_for_select([['User'], ['Post']]) %>
    <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %><br>
    <%= f.submit "検索", class: "mt-2" %>
    </div>
<% end %>