 <div>
  <%= image_tag @post.get_image %>
  <p> ユーザーネーム : <%= link_to user_path(@post.user_id) do %>
                        <%= @post.user.name %>
                      <% end %>
                      </p>
  <p> タイトル : <%= @post.title %> </p>
  <p> 本文 : <%= @post.body %>  </p>
  <%#= @post.genre %>
  <%#= @post.kind %>
  <%#= @post.origin_country %>
  <%#= @post.place %>
  <p> 投稿日 : <%= @post.created_at.strftime('%Y/%m/%d') %> </p>
  <p> <% if @post.user == current_user %>
        <%= link_to "投稿を編集", edit_post_path(@post.id) %>
      <% end %>
      </p>
</div>