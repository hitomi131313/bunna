<div class="post-detail py-5 bg-light">
  <div class="container">
    <div class="card mx-auto mt-4 shadow-lg">
      <%= image_tag @post.get_image, class:"card-img-top" %>
      <div class="card-body">
        <div class="row">
          <div class="col-sm col-md-2">
            <%= image_tag @post.user.get_profile_image(100,100), class: "img-fluid rounded-cercle"; %>
          </div>
         <div class="col-sm-12 col-md-10">
           <p class="card-title"> ユーザーネーム : <%= link_to user_path(@post.user_id) do %>
                                                  <%= @post.user.name %>
                                                  <% end %>
                                                  </p>
           <p> タイトル : <%= @post.title %> </p>
           <p> 本文 : <%= @post.body %> </p>
           <%#= @post.genre %>
           <p> 種類 : <%= @post.kind_i18n %> </p>
           <p> 産地国 : <%= @post.origin_country_i18n %> </p>
           <p> 場所 : <%= @post.place_i18n %> </p>
           <span><i class="fa-solid fa-calendar-days"></i> <%= @post.created_at.strftime('%Y/%m/%d') %> ｜ </span>

           <% if @post.favorited_by?(current_user) %>
             <span>
               <%= link_to post_favorite_path(@post), class:"text-dark", method: :delete do %>
                 ♥<%= @post.favorites.count %>いいね
               <% end %>
             </span>
           <% else %>
             <span>
               <%= link_to post_favorite_path(@post), class:"text-dark", method: :post do %>
                 ♡<%= @post.favorites.count %>いいね
               <% end %>
             </span>
           <% end %>

           <br>
           <% if @post.user == current_user %>
             <%= link_to "投稿を編集", edit_post_path(@post.id) %>
           <% end %>

           <hr>
           <div class="comments card-text">
             <h5 class="mt-3"><%= @post.comments.count %>件コメント</h5>
             <% @post.comments.each do |comment| %>
               <div class="media-border mb-3">
                 <%= image_tag comment.user.get_profile_image(50,50) %>
                 <div class="media-body ml-4 p-3">
                   <p><%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %></p>
                   <p><%= comment.user.name %></p>
                 </div>
               </div>
             <% end %>
           </div>
           <hr>
           <div class="new-comment card-text">
             <%= form_with model: [@post, @comment] do |f| %>
               <div class="form-group">
                 <label for="exampleFormControlTextarea1">コメントする</label>
                 <%= f.text_area :comment, rows:'2', placeholder: "コメントをここに" %>
                 <%= f.submit "送信する" %>
               </div>
             <% end %>
           </div>
         </div>
       </div>
     </div>
  </div>
</div>